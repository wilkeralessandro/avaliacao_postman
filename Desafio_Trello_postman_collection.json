		{
			"name": "Criar quadro",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//Obter resposta status 200",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"const response = pm.response.json();",
							"",
							"pm.test(\"O quadro deve ser criado\", function () {",
							"    pm.expect(response.name).to.eql(pm.environment.get(\"boardName\"));",
							"    pm.expect(response.closed).to.eql(false);",
							"});",
							"",
							"pm.test(\"O quadro deve ser privado\", function () {",
							"    pm.expect(response.prefs.permissionLevel).to.eql(\"private\");",
							"});",
							"",
							"//Definir variável de ambiente",
							"pm.environment.set(\"boardId\", response.id);",
							"",
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const boardName = \"Teste South System \" + Math.random().toString(36).substring(7);",
							" ",
							"// Set the boardName for the request",
							"pm.environment.set(\"boardName\", boardName);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{url_board}}?name={{boardName}}&key={{trelloKey}}&token={{trelloToken}}&defaultLists=false&permissionLevel=public",
					"host": [
						"{{url_board}}"
					],
					"query": [
						{
							"key": "name",
							"value": "{{boardName}}"
						},
